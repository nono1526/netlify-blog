
$contentClass = '.vuetify__content'
$listLayoutClass = '.vuetify__list'
@require './palette.styl'
@require './code.styl'
@require './font.styl'
*
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", "Helvetica Neue", Helvetica, Roboto, Arial, "PingFang TC", "Microsoft JhengHei", "微軟正黑", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"


html, body
  padding 0
  margin 0
  background-color #fff
  font-size 1.1rem

body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", "Helvetica Neue", Helvetica, Roboto, Arial, "PingFang TC", "Microsoft JhengHei", "微軟正黑", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color $textColor

{$$listLayoutClass}
  max-width 1080px
  margin 0 auto
{$contentClass}:not(.custom)
  max-width 1080px
  margin 0 auto
  > *:first-child
    margin-top $navbarHeight

  a:hover
    text-decoration underline

  p.demo
    padding 1rem 1.5rem
    border 1px solid #ddd
    border-radius 4px

  img
    max-width 100%

{$contentClass}.custom
  padding 0
  margin 0

  img
    max-width 100%

a
  font-weight 500
  color $accentColor
  text-decoration none
  &:hover
    color darken($accentColor, 20%)

p a code
  font-weight 400
  color $accentColor

kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote
  font-size .9rem
  color darken($accentColor, 50%)
  border-left: 3px solid $accentColor;
  margin 0.5rem 0
  padding .25rem 0 .25rem 1rem

  & > p
    margin 0

ul, ol
  padding-left 1.2em

strong
  font-weight 500

.article-mate
  font-size .8rem
  margin-bottom 1.5em

h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.25
  font-family Helvetica
  margin-top 1em
  margin-bottom 1em
  color #282828
  {$contentClass}:not(.custom) > &
    margin-top (0.5rem - $navbarHeight)
    padding-top ($navbarHeight + 1rem)
    margin-bottom 0

    &:first-child
      margin-top -4rem
      margin-bottom 1rem

      + p, + pre, + .custom-block
        margin-top 2rem

  &:hover .header-anchor
    opacity: 1

h1
  font-size 2rem
  border-bottom 1px solid #eaeaea
  padding-bottom 0.3rem
h2
  font-size 1.7rem
  border-radius 3px
  .header-anchor
    transform translateX(-10px)
h3
  margin-top .8em
  margin-bottom .8em
  font-size 1.3rem
h4
  font-size 1.1rem
  color #a5a5a5
a.header-anchor
  font-size 0.85em
  float left
  margin-left -0.87em
  padding-right 0.23em
  margin-top 0.125em
  opacity 0

  &:hover
    text-decoration none

code, kbd, .line-number
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

ul, ol
  margin-top 1em
  margin-left .5em

p, ul, ol
  line-height 1.3
  font-size 1rem
  margin-bottom .5em
  li
    padding-top 0.4em
    padding-bottom 0.4em
hr
  border 0
  border-top 1px solid $borderColor

table
  border-collapse collapse
  margin 1rem 0
  display: block
  overflow-x: auto

tr
  border-top 1px solid #dfe2e5

  &:nth-child(2n)
    background-color #f6f8fa

th, td
  border 1px solid #dfe2e5
  padding .6em 1em
.tip
  margin 1.2rem 0
  padding 0.8rem 1.5rem
  border-radius 0.4rem
  background-color #f0f4f8
  border-left: #42B983 5px solid
  color: rgba(#313131)
  .custom-block-title
    font-weight bold

.theorem
  margin 1rem 0
  padding .1rem 1.5rem
  border-radius 0.4rem
  background-color #f0f4f8
  .title
    font-weight bold

.custom-block
  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right